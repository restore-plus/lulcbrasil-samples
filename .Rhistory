## Image Data cubes used for classification examples
# Carregar pacote:
library(sf)
# Carregar o arquivo .rds:
data <- readRDS("~/Dropbox/01_restore-plus/01_samples/ana_rorato/samples_amazonia.rds")
# Verificar se os dados estão no formato sf:
if (!inherits(data, "sf")) {
stop("O objeto não é do tipo 'sf'. Verifique o conteúdo do arquivo RDS.")
}
# Verificar se tem colunas de coordenadas?
if (!all(c("longitude", "latitude") %in% names(data))) {
stop("O objeto não contém colunas de coordenadas 'longitude' e 'latitude'.")
}
# Converter para sf (sistema WGS 84):
data_sf <- st_as_sf(data, coords = c("longitude", "latitude"), crs = 4326)
#Verificar sua classe:
class(data_sf)
# Verificar se há colunas do tipo list:
sapply(data_sf, class)
# Remover colunas do tipo list:
data_sf$time_series <- NULL  # Removendo time_series.
# Verificar se há colunas do tipo list novamente:
sapply(data_sf, class)
# Salvar data_sf como GPKG
st_write(data_sf, "~/Dropbox/01_restore-plus/01_samples/ana_rorato/samples_amazonia.rds/samples_amazonia.gpkg", driver = "GPKG")
